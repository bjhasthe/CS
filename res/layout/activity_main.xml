<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#863d8d"
    android:padding="40dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.qr.cs.MainActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <Button
        android:id="@+id/btn_scn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="118dp"
        android:background="#b585b9"
        android:hint="@string/btn_hint"
        android:onClick="scanNow"
        android:text="@string/btn_scn"
        android:textColor="#000000" />

 <!-- 
 
 <TextView 
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content" 
        android:layout_centerHorizontal="true" 
        android:id="@+id/scan_format" 
        android:layout_below="@id/btn_scn" 
        android:textIsSelectable="true"/>
    <TextView 
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content" 
        android:layout_centerHorizontal="true" 
        android:id="@+id/scan_content" 
        android:layout_below="@id/scan_format" 
        android:textIsSelectable="true"/>
 
  -->

    <TextView
        android:id="@+id/lable_scan_format"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_scn"
        android:layout_marginTop="58dp"
        android:text="@string/scan_format"
        android:textColor="#fef0ff" />

    <TextView
        android:id="@+id/scan_format"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/lable_scan_format"
        android:textColor="#fef0ff" />

    <TextView
        android:id="@+id/scan_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/scan_format"
        android:layout_below="@+id/scan_format"
        android:layout_marginTop="50dp"
        android:textColor="#fef0ff" />

    <TextView
        android:id="@+id/lable_scan_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/scan_content"
        android:layout_alignLeft="@+id/lable_scan_format"
        android:layout_marginBottom="16dp"
        android:text="@string/scan_content"
        android:textColor="#fef0ff" />

</RelativeLayout>